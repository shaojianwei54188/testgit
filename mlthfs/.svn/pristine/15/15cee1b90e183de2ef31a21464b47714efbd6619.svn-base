<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="utf-8">
    <title>可靠性评估结果</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" th:href="@{/favicon.ico}">
    <link rel="stylesheet" th:href="@{/lib/layui/css/layui.css}" media="all"/>
    <!--阿里icon class库,通过icon-text等类设置图标-->
    <link rel="stylesheet" th:href="@{//at.alicdn.com/t/font_tnyc012u2rlwstt9.css}" media="all"/>
    <link rel="stylesheet" th:href="@{/common/css/main.css}" media="all"/>
    <link rel="stylesheet" th:href="@{/common/css/user.css}" media="all"/>
</head>
<body class="childrenBody">
<fieldset class="layui-elem-field">
    <legend>评估结果检索</legend>
    <div class="layui-field-box">
        <form class="layui-form">
            <div class="layui-inline" style="margin-left: 15px">
                <label>预报断面:</label>
                <div class="layui-input-inline">
                    <input type="text" value="" name="s_key" placeholder="请输入测站名称" class="layui-input search_input">
                </div>
                <div class="layui-input-inline">
                    <label class="layui-form-label">起报时间</label>
                    <div class="layui-input-inline">
                        <input type="text" name="s_forecastTimeStart" placeholder="请选择起报时间" class="layui-input"
                               id="forecast_time_start">
                    </div>
                </div>
                <div class="layui-input-inline">
                    <label class="layui-form-label">预报时间</label>
                    <div class="layui-input-inline">
                        <input type="text" name="s_forecastTime" placeholder="请选择预报时间" class="layui-input"
                               id="forecast_time">
                    </div>
                </div>
                <div class="layui-input-inline">
                    <label class="layui-form-label">方案编号:</label>
                    <div class="layui-input-inline">
                        <input type="text" value="" name="s_planId" placeholder="请输入方案编号"
                               class="layui-input search_input">
                    </div>
                </div>
            </div>
            <div class="layui-inline" style="margin-left: 15px">
                <a class="layui-btn" lay-submit="" lay-filter="searchForm">查询</a>
            </div>
        </form>
    </div>
</fieldset>
<div class="layui-form users_list">
    <table class="layui-table" id="test" lay-filter="demo"></table>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">方案详情</a>
        <!--<a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>-->
    </script>
</div>
<div id="page"></div>
<div id='jsonContainer' class="Canvas" style="display: none"></div>
<script type="text/javascript" th:src="@{/lib/layui/layui.js}"></script>
<script type="text/javascript" th:src="@{/common/js/tools.js}"></script>
<script>
    layui.use(['layer', "form", 'table', 'laydate'], function () {
        var layer = layui.layer,
            $ = layui.jquery,
            form = layui.form,
            laydate = layui.laydate,
            table = layui.table,
            t;
        form.render();
        // 预报时间
        laydate.render({
            elem: '#forecast_time'    //月份选择
            , type: 'month'
            , format: 'yyyy-MM' //可任意组合
        });
        //        起报时间
        laydate.render({
            elem: '#forecast_time_start' //月份选择
            , type: 'month'
            , format: 'yyyy-MM' //可任意组合
        });

        t = {
            elem: '#test',
            url: '/assess/assessResultInfo',
            method: 'get',
//            initSort: {field: 'stcd', type: 'asc'},
            page: { //支持传入 laypage 组件的所有参数（某些参数除外，如：jump/elem） - 详见文档
                layout: ['limit', 'count', 'prev', 'page', 'next', 'skip'], //自定义分页布局
                //,curr: 5 //设定初始在第 5 页
                groups: 2, //只显示 1 个连续页码
                first: "首页", //显示首页
                last: "尾页", //显示尾页
                limits: [12,24,36,100],
                limit:12
            },
            width: $(parent.window).width() - 223,
            cols: [
                [
                    {fixed: 'left', field: 'id', title: '序号', width: '5%', sort: true},
                    {field: 'forecastSection', title: '预报断面'},
                    {field: 'forecastTimeStart', title: '起报时间'},
                    {field: 'forecastTime', title: '预报时间'},
                    {field: 'modelName', title: '模型名称', sort: true},
                    {field: 'planId', title: '方案编号', width: 250},
                    {field: 'forecastBmaValue', title: '综合预报值&nbsp;(m<sup>3</sup>/s)'},
                    {field: 'forecastQ50Value', title: '评估倾向预报值&nbsp;(m<sup>3</sup>/s)'},
                    {field: 'forecastQ5Value', title: '5%下限值&nbsp;(m<sup>3</sup>/s)'},
                    {field: 'forecastQ95Value', title: '95%上限值&nbsp;(m<sup>3</sup>/s)'},
                    {field: 'createDate', title: '创建时间',sort:true},
                    {fixed: 'right', width: 180, title: '操作', align: 'center', toolbar: '#barDemo'}
                ]
            ]
        };
        table.render(t);
        //搜索
        form.on("submit(searchForm)", function (data) {
            t.where = data.field;
            table.reload('test', t);
            return false;
        });

        //监听工具条
        table.on('tool(demo)', function (obj) {
            var data = obj.data;
            if (obj.event === 'edit') {
                var editIndex = layer.open({
                    title: "方案详细信息",
                    type: 2,
                    content: "/assess/assessResultInfo/edit?planId=" + data.planId
                    + "&forecastTimeStart=" + data.forecastTimeStart
                    + "&forecastSection=" + data.forecastSection ,
                    success: function (layero, index) {
                        setTimeout(function () {
                            layer.tips('点击此处返回列表', '.layui-layer-setwin .layui-layer-close', {
                                tips: 3
                            });
                        }, 500);
                    }
                });
                //改变窗口大小时，重置弹窗的高度，防止超出可视区域（如F12调出debug的操作）
                $(window).resize(function () {
                    layer.full(editIndex);
                });
                layer.full(editIndex);
            }
        });

    })
</script>
</body>
</html>